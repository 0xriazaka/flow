{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "rootDir": "./", // By setting rootDir to ./src
    "esModuleInterop": true,
    "resolveJsonModule": true, // for json file
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "config.json",  // add your JSON file outside the asset folder
    "collection.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
